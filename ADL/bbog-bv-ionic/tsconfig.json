{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "baseUrl": "./src",
    "paths": {
      "@app/env": [
        "environments/environment"
      ],
      "@app/delegate/*": [
        "new-app/core/services-delegate/*"
      ],
      "@app/apis/*": [
        "new-app/core/services-apis/*"
      ],
      "@app/shared/*": [
        "new-app/shared/*"
      ],
      "@app/modules/*": [
        "new-app/modules/*"
      ]
    },
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "main.ts"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
